<div id="<%= dom_id product %>">

  <% if product.image.present? %>
    <p> <%= image_tag product.image %> </p>
  <% end %>

  <p>
    <h3><%= product.name %></h3>
  </p>

  <p>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= product.quantity %>
  </p>

</div>
