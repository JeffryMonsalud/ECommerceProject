<div class="col">
  <div class="card" style="width: 18rem;">
    <% if product.image.present? %>
      <figure class="image">
        <%= image_tag product.image, style: 'height: 200px; width: 100%;', alt: 'image' %>
      </figure>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to product['name'], product %></h5>
      <strong class="card-text"> $<%= product.price %></strong>
        <% if product.quantity > 0 %>
        <a> In stock </a><br>
          <% if user_signed_in? %>
              <% if @cart.include?(product) %>
                <%= button_to "Remove from Cart", remove_from_cart_path(product), method: :delete %>
              <% else %>
                <%= button_to "Add to Cart", add_to_cart_path(product, :quantity => 1) %>
              <% end %>
          <% else %>
          <a> Sign in to add to cart </a>
          <% end %>
        <% else %>
          <p> Unavailable </p>
        <% end %>
    </div>
  </div>
</div>