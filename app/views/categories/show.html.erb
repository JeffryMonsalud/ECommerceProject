<p style="color: green"><%= notice %></p>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @category.products.name %></li>
  </ol>
</nav>
<h1 class="product-title">Products</h1>

<%= paginate @products %>

<h4 class="product-title"> Available Stock </h4>
<div class="row">
  <% @products.each do |product| %>
    <% if product.quantity > 0 %>
      <%= render product%>
    <% end %>
  <% end %>
</div>

<%= paginate @products %>

<h4 class="product-title"> Out of Stock </h4>
<div class="row">
  <% @products.each do |product| %>
    <% if product.quantity < 1 %>
        <%= render product%>
    <% end %>
  <% end %>
</div>

<%= paginate @products %>